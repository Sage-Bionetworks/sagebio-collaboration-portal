  "version": "0.2.0",
  "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "[NODE] Attach to PHCCP back-end",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "[CHROME] PHCCP front-end",
            "url": "https://localhost/home",
            "webRoot": "${workspaceFolder}"
        },
    ]
}
